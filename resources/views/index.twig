    <script type="text/javascript" src="{{ base_url() }}/node_modules/jquery-validation/dist/localization/messages_pt_BR.min.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/guest/js/main.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/user/js/validation.js"></script>
